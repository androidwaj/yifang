<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <android.support.v4.view.ViewPager
        android:id="@+id/hometab_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:id="@+id/hometab_home"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:onClick="homeClick"
	        >
	        <ImageView 
	            android:id="@+id/hometab_home_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/hometab_home_bg"
	            />
	        <TextView  android:id="@+id/hometab_home_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="首页"
	            android:textStyle="bold"
	            android:textColor="#FF9224"
	            />
	    </LinearLayout>
	    <LinearLayout android:id="@+id/hometab_message"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:onClick="messageClick"
	        >
	        <ImageView 
	            android:id="@+id/hometab_message_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/hometab_message_bg"
	            />
	        <TextView android:id="@+id/hometab_message_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="信息"
	            android:textColor="#8E8E8E"
	            android:textStyle="bold"
	            />
	    </LinearLayout>
	    <LinearLayout android:id="@+id/hometab_me"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:onClick="meClick"
	        >
	        <ImageView 
	            android:id="@+id/hometab_me_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/hometab_me_bg"
	            />
	        <TextView android:id="@+id/hometab_me_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="我"
	            android:textColor="#8E8E8E"
	            android:textStyle="bold"
	            />
	    </LinearLayout>
	    <LinearLayout android:id="@+id/hometab_more"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:onClick="moreClick"
	        >
	        <ImageView 
	            android:id="@+id/hometab_more_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/hometab_more_bg"
	            />
	        <TextView android:id="@+id/hometab_more_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="更多"
	            android:textColor="#8E8E8E"
	            android:textStyle="bold"
	            />
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
